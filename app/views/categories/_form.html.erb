<%= form_with(model: @category, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :c_name %>
    <%= form.text_field :c_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :c_size %>
    <%= form.text_field :c_size, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image, 'Upload Image' %>
    <%= form.file_field :image %> <!-- Use :image instead of :images -->
  </div>

  <div class="form-group">
    <%= form.submit 'Create Category', class: 'btn btn-primary' %>
  </div>
<% end %>
