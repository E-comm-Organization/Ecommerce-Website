<div class="container">
    <div class="signup-box">
        <h2>Sign Up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Email input -->
            <div class="input-box">
                    <input type="email" name="user[email]" required autofocus autocomplete="email">
                    <label>Email</label>
                </div>

            <!-- Password input -->
            <div class="input-box">
                    <% if @password.present? && @password.length < 6 %>
                     <em>(Password Minimum <%= @minimum_password_length %> Characters)</em>
                    <% end %>
                    <input type="password" name="user[password]" required autocomplete="new-password">
                    <label>Password</label>
            </div>

            <!-- Password confirmation input -->
            <div class="input-box">
                <input type="password_confirmation" name="user[password]" required autocomplete="new-password">
                <label>Confirm Password</label>
            </div>

            <!-- Role selection -->
            <%# <div class="input-box"> %>
                <%# <%= f.label :role, class: "form-label" %>
                <%# <%= f.select :role, User.roles.keys.reject { |role| role == 'admin' }.map { |role| [role.titleize, role] }, {}, class: "form-control" %> 
            <%# </div> %>

            <!-- Submit button -->
            <button type="submit">Sign up</button>
        <% end %>
        
        <p class="forgot-password">Already have an account? <a href="<%= new_session_path(resource_name) %>">Login</a></p>
    </div>
</div>

<style>
/* Body styles */
body {
    margin: 0;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: Arial, sans-serif;
    background-size: cover;
    background-repeat: no-repeat;
    background-image: url('/assets/image4.png');
}

/* Container to center the signup box */
.container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}

/* Sign up box styling */
.signup-box {
    position: relative;
    width: 350px;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.18);
    text-align: center;
}

/* Title */
.signup-box h2 {
    margin: 0 0 20px;
    color: #fff;
    font-size: 24px;
}

/* Input box styling */
.input-box {
    position: relative;
    margin-bottom: 30px;
}

.input-box input,
.input-box select {
    width: 100%;
    padding: 10px;
    background: transparent;
    border: none;
    border-bottom: 1px solid #fff;
    color: #fff;
    font-size: 18px;
    outline: none;
}

/* Label styling */
.input-box label {
    position: absolute;
    top: 10px;
    left: 0;
    color: rgba(255, 255, 255, 0.6);
    transition: 0.5s;
    pointer-events: none;
}

.input-box input:focus ~ label,
.input-box input:valid ~ label {
    top: -20px;
    left: 0;
    color: #fff;
    font-size: 14px;
}

/* Button styling */
button {
    width: 100%;
    padding: 10px;
    background: #ffd700;
    border: none;
    border-radius: 10px;
    color: #333;
    font-size: 18px;
    cursor: pointer;
    transition: background 0.3s;
}

button:hover {
    background: #ffc107;
}

/* Forgot password link */
.forgot-password {
    display: block;
    margin-top: 15px;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s;
}

.forgot-password:hover {
    color: #fff;
}
</style>
