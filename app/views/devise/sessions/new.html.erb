    <div class="container">
        <div class="login-box">
            <h2>Login</h2>
            <form action="<%= session_path(resource_name) %>" method="post">
                <div class="input-box">
                    <input type="email" name="user[email]" required autofocus autocomplete="email">
                    <label>Email</label>
                </div>
                <div class="input-box">
                    <input type="password" name="user[password]" required autocomplete="current-password">
                    <label>Password</label>
                </div>
                <a href="<%= new_password_path(resource_name) %>" class="forgot-password">Forgot Password?</a>
                <br>
                <button type="submit">Login</button>
            </form>
            <p class="forgot-password">Don't have an account? <a href="<%= new_registration_path(resource_name) %>">Sign up</a></p>
        </div>
    </div>


