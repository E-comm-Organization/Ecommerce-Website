<body>
  <div class="container mt-4">
    <br>
    <h1 class="mb-4 text-center"><%= @product.name %></h1>
    <br>
    <br>
    <div class="row">
      <!-- Product Image Carousel -->
      <div class="col-md-6">
        <div id="productCarousel" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% if @product.images.attached? %>
              <% @product.images.each_with_index do |image, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>">
                  <%= image_tag(image, class: "img-fluid rounded") %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Carousel Controls -->
          <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <!-- Product Details -->
      <div class="col-md-6">
        <h2 class="product-title"><%= @product.name %></h2>
        <p><strong>SKU:</strong> <%= @product.sku %></p>
        <p><strong>Size:</strong> <%= @product.size %></p>
        <p><strong>MRP:</strong> <del>$<%= @product.mrp %></del></p>
        <p><strong>Selling Price:</strong> <span class="text-success">$<%= @product.selling_price %></span></p>

        <!-- Action Buttons -->
        <div class="mt-4">
          <%= button_to 'Add to Cart', cart_items_path(product_id: @product.id), method: :post, class: 'btn btn-success btn-lg btn-block mt-2' %>

          <%= link_to 'Buy Now', new_order_path(current_user), class: 'btn btn-primary btn-lg btn-block mt-2' %>
        </div>

        <!-- Edit and Back to Products -->
        <div class="mt-4 d-flex justify-content-center">
          <%if current_user.admin? %>
          <%= link_to 'Edit Product', edit_category_product_path(@category, @product), class: 'btn btn-warning btn-sm mr-2' %>
          <%end%>
          <%= link_to 'Back to Products', category_products_path(@category), class: 'btn btn-secondary btn-sm' %>
        </div>
      </div>
    </div>
  </div>
</body>