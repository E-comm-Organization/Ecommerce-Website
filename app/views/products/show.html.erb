  <div class="container mt-4">
    <br>
    <h1 class="mb-4 text-center product-name"><%= @product.name %></h1>
    <br>
    <br>
    <div class="row">
      <!-- Product Image Carousel -->
      <div class="col-md-6">
        <div id="productCarousel" class="carousel slide shadow-lg" data-ride="carousel">
          <div class="carousel-inner">
            <% if @product.images.attached? %>
              <% @product.images.each_with_index do |image, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>">
                  <%= image_tag(image, class: "img-fluid rounded") %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Carousel Controls -->
          <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <!-- Product Details -->
      <div class="col-md-6">
        <h2 class="product-title"><%= @product.name %></h2>
        <p><strong>SKU:</strong> <%= @product.sku %></p>
        <p><strong>Size:</strong> <%= @product.size %></p>
        <p><strong>Price:</strong> $<%= @product.price %></p>
        <p><strong>MRP:</strong> <del>$<%= @product.mrp %></del></p>
        <p><strong>Selling Price:</strong> <span class="text-success">$<%= @product.selling_price %></span></p>

        <!-- Action Buttons -->
        <div class="mt-4">
          <%= link_to 'Add to Cart', '#', class: 'btn btn-success btn-lg btn-block' %>
          <%= link_to 'Buy Now', new_order_path(current_user), class: 'btn btn-primary btn-lg btn-block mt-2' %>
        </div>

        <!-- Edit and Back to Products -->
        <div class="mt-4">
          <%= link_to 'Edit Product', edit_category_product_path(@category, @product), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Back to Products', category_products_path(@category), class: 'btn btn-secondary btn-sm' %>
        <div class="price-details">
          <p class="price">₹<%= @product.selling_price %></p>
          <p class="original-price">₹<%= @product.mrp %></p>
        </div>
        <h5 class="size">Size: <span><%= @product.size %></span></h5>
        <h3 class="offers-title">Available Offers</h3>
        <ul class="offers-list">
          <li>Special Price: Get extra 30% off</li>
          <li>Combo Offer: Buy 2 items, save 3%</li>
          <li>Bank Offer: 5% Unlimited Cashback on Flipkart Axis Bank Credit Card</li>
        </ul>
        <!-- Action Buttons -->
        <div class="mt-4">
          <%= button_to '⚡Buy Now', cart_items_path(product_id: @product.id), method: :post, class: 'btn btn-primary btn-lg btn-block mt-2 shadow' %>
           
        </div>

        <!-- Edit and Back to Products -->
        <div class="mt-4 d-flex justify-content-center">
          <% if current_user.admin? %>
          <%= link_to 'Edit Product', edit_category_product_path(@category, @product), class: 'btn btn-warning btn-sm mr-2 shadow' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>

